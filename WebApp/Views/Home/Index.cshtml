@model IEnumerable<WebApp.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome!</h1>
    <p class="lead">This iS Categories Of Products</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>


@foreach (var item in Model)
{
    <div class="panel panel-default" style="padding:15px;">
        <h1 class="panel-heading">@Html.DisplayFor(modelItem => item.Name)</h1>
        <div class="row">
            @foreach (var subItem in item.Products)
            {
                
                    <div class="col-lg-3 thumbnail" style="margin-left:20px; margin-bottom:30px;">
                        <img src="~/UpLoads/@subItem.Image" style="width:200px; height:200px;" />
                        <h3>@Html.DisplayFor(modelItem => subItem.Name)</h3>
                        <h3>@Html.DisplayFor(modelItem => subItem.Price)<text>EGP</text></h3>
                        <button class="btn btn-default">Details</button>
                    </div>
               

            }
        </div>
    </div>
}
