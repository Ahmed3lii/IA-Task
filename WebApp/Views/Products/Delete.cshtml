@model WebApp.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <center>
            @Html.DisplayFor(model => model.Name) <text>-</text>



            @Html.DisplayFor(model => model.Price) <text>EGP-</text>



            <text>(</text>@Html.DisplayFor(model => model.Category.Name)<text>)</text>

            <br />
            <br />

            <img src="~/UpLoads/@Html.DisplayFor(Model => Model.Image)"
                 class="thumbnail" style="width:400px; height:400px;" />

            <br />
            <br />



            @Html.DisplayFor(model => model.Description)

        </center>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
